<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_xs"
            android:background="@drawable/background_elevation"
            android:elevation="@dimen/elevation_s"
            android:padding="@dimen/space_s">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text View"
                    android:textAppearance="@style/TextAppearance.WavesOfFood.Name" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/space_xxs"
                    android:text="@string/concise_payment"
                    android:textAppearance="@style/TextAppearance.WavesOfFood.Hint" />

                <TextView
                    android:id="@+id/statusPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text View"
                    android:textAppearance="@style/TextAppearance.WavesOfFood.Status" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/statusPaymentImage"
                android:layout_width="@dimen/circle_status"
                android:layout_height="@dimen/circle_status"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_xs"
                android:backgroundTint="@color/divider"
                app:cardCornerRadius="@dimen/corner_full"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>